<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Redirxn.TeamKitty.Views.StatusPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="{Binding MyDisplayName}"
                    VerticalOptions="Start" 
                    HorizontalOptions="CenterAndExpand" />
                <Label Text="Balance:"
                    HorizontalOptions="Start" />
                <Label Text="{Binding MyBalanceText}"
                    HorizontalOptions="CenterAndExpand" />
                <StackLayout Orientation="Horizontal">
                    <Button Text="Pay" Command="{Binding PayCommand}" />
                    <Button Text="Provide Stock" Command="{Binding ProvideCommand}"/>
                </StackLayout>                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>